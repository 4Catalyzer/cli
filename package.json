{
  "name": "4c-cli-root",
  "version": "0.3.1",
  "repository": "https://github.com/4Catalyzer/cli.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint",
    "lint": "yarn cli lint .",
    "cli": "node packages/cli",
    "format": "yarn cli format ."
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn cli lint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "yarn cli lint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@4c/import-sort": "^4.3.1",
    "@babel/core": "^7.3.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-config-4catalyzer": "^0.7.2",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4"
  }
}
