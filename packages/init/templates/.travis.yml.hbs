sudo: false

language: node_js

node_js:
  - '10'
  - '8'

before_install:
  - curl -o- -L https://yarnpkg.com/install.sh | bash
  - export PATH=$HOME/.yarn/bin:$PATH

{{#if semanticRelease}}
deploy:
  provider: script
  skip_cleanup: true
  script:
    - yarn travis-deploy-once "yarn semantic-release"
{{/if}}
branches:
  only:
    - master
