{
  "name": "4c-cli-root",
  "version": "0.3.1",
  "repository": "https://github.com/4Catalyzer/cli.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint . && prettier --list-different --ignore-path .eslintignore '**/*.{json,css,md}'",
    "precommit": "lint-staged"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".js": {
      "parser": "@4c/import-sort/parser",
      "style": "@4c/import-sort/style"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@4c/import-sort": "^4.3.1",
    "@babel/core": "^7.0.0-beta.39",
    "babel-eslint": "^9.0.0",
    "eslint": "^4.16.0",
    "eslint-config-4catalyzer": "^0.4.4",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-prettier": "^2.5.0",
    "husky": "^0.14.3",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.10.2"
  }
}
