{
  "name": "{{name}}",
  "version": "1.0.0",
  "main": "{{iff babel 'lib/index.js' 'index.js'}}",
  {{#if babel}}
    "module": "es/index.js",
  {{/if}}
  "repository": {
    "type": "git",
    "url": "{{gitUrl name}}"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    {{#if babel}}
      "build:es": "babel src -d es --env-name esm --ignore **/__tests__ --delete-dir-on-start",
      "build:lib": "babel src -d lib --ignore **/__tests__ --delete-dir-on-start",
      {{#if typescript}}
      "build:types": "tsc --outDir lib && tsc --outDir es",
      {{/if}}
      "build": "yarn build:lib && yarn build:es",
      "prepublishOnly": "yarn run build",
    {{/if}}
      "tdd": "jest --watch",

    {{#if workspaceRoot}}
      "test": "jest",
    {{else}}
      "test": "yarn lint && jest",
      "testonly": "jest",
    {{/if}}

    {{#unless workspaceRoot}}
      "eslint": "eslint . {{#if typescript}}--ext .js,.ts,.tsx{{/if}}",
      "prettier": "prettier --ignore-path .eslintignore '**/*.{json,css,md}'",
      "import-sort": "import-sort '**/src/**/*.{{iff typescript '{js,ts,tsx}' 'js'}}' '!**/__generated__/*'{{#if typescript}} '!**/*.d.ts'{{/if}}",
      "lint": "{{#if typescript}}tsc --noEmit && {{/if}}yarn eslint && yarn import-sort --list-different && yarn prettier --list-different",
      "format": "yarn eslint && yarn import-sort --write && yarn prettier --write"
    {{/unless}}
  },
  "publishConfig": {
    "access": "{{iff isPrivate 'restricted' 'public'}}"
  },
  {{#unless workspaceRoot}}
    "prettier": {
      "printWidth": 79,
      "singleQuote": true,
      "trailingComma": "all"
    },
    "importSort": {
      {{#unless typescript}}
      ".js": {
        "parser": "import-sort-style-4catalyzer/parser",
        "style": "import-sort-style-4catalyzer"
      },
      {{else}}
      ".ts, .tsx": {
        "parser": "import-sort-style-4catalyzer/parser-ts",
        "style": "import-sort-style-4catalyzer"
      }
      {{/unless}}
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "{{iff typescript '*.{js,ts,tsx}' '*.js'}}": [
        "eslint --fix",
        "import-sort --write",
        "git add"
      ],
      "*.{json,css,md}": [
        "prettier --write --ignore-path .eslintignore",
        "git add"
      ]
    },
  {{/unless}}
  "jest": {
    "preset": "@4c/jest-preset",
    "roots": ["<rootDir>/test"],
    "testEnvironment": "{{iff (eq type 'node') 'node' 'jsdom'}}"
  },
  {{#unless workspaceRoot}}
    {{#if semanticRelease}}
      "release": {
        "extends": ["@4c/semantic-release-config"]
      },
    {{/if}}
  {{/unless}}

  "devDependencies": {
    "@4c/jest-preset": "^1.3.0",
    {{#if babel}}
      "@babel/cli": "^7.2.3",
      "@babel/core": "^7.2.2",
      "@4c/babel-preset-4catalyzer": "^4.1.1",
      "babel-core": "^7.0.0-bridge.0",
    {{/if}}
    {{#if typescript}}
      {{#if (eq type 'node')}}
        "@types/node": "*",
      {{/if}}
    {{/if}}
    {{#unless workspaceRoot}}
      "eslint": "^5.12.0",
      "eslint-config-prettier": "^3.3.0",
      "eslint-plugin-import": "^2.8.0",
      "eslint-plugin-prettier": "^3.0.1",
      "eslint-plugin-jest": "^22.1.2",
      {{#if (eq type 'web') }}
        "eslint-config-4catalyzer-react": "^0.7.0",
        "eslint-plugin-react": "^7.12.3",
        "eslint-plugin-jsx-a11y": "^6.0.3",
      {{else}}
        "eslint-config-4catalyzer": "^0.7.0",
      {{/if}}
      {{#if typescript}}
        "typescript": "^3.2.2",
        "@babel/preset-typescript": "^7.1.0",
        "eslint-config-4catalyzer-typescript": "^0.7.0",
        "eslint-plugin-typescript": "^1.0.0-rc.2",
      {{/if}}
      "import-sort-cli": "^5.2.0",
      "import-sort-style-4catalyzer": "^4.3.0",
      {{#if semanticRelease}}
        "@4c/semantic-release-config": "^1.0.2",
        "semantic-release": "^15.5.0",
        "travis-deploy-once": "^5.0.0",
      {{/if}}
      "husky": "^1.1.2",
      "lint-staged": "^8.1.0",
      "prettier": "^1.15.3",
    {{/unless}}
    "jest": "^23.5.0"
  }
}
