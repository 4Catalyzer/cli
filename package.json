{
  "name": "4c-cli-root",
  "version": "0.3.1",
  "repository": "https://github.com/4Catalyzer/cli.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint && lerna run test",
    "lint": "yarn cli lint .",
    "cli": "node packages/cli",
    "format": "yarn cli format ."
  },
  "prettier": "@4c/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn cli lint --fix",
    "*.{json,css,md}": "yarn cli lint --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@4c/prettier-config": "^1.1.0",
    "@babel/core": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-4catalyzer": "^1.1.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1"
  }
}
