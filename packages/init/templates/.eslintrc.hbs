{
  "plugins": ["prettier"],
  "extends": ["4catalyzer-react", "4catalyzer-jest", "prettier", "prettier-react", {{~#if typescript}}"4catalyzer-typescript"{{/if}}],
  "env": {
      {{#if (eq type "node")}}
      "node": true
      {{else}}
      "browser": true
      {{/if}}
  },
  "rules": {
    "prettier/prettier": "error",
    {{#if (eq type "node")}}
    "global-require": "off",
    "import/no-dynamic-require": "off"
    {{/if}}
  }
}
