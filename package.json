  "bugs": {
    "url": "https://github.com/4Catalyzer/cli/issues"
  },
  "license": "MIT",
  "author": "4Catalyzer",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/cli.git"
