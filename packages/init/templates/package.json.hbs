{
  "name": "{{name}}",
  "version": "1.0.0",
  "main": "{{iff babel 'lib/index.js' 'index.js'}}",
  {{#if (eq type 'web')}}
    {{#if babel}}
      "module": "lib/es/index.js",
    {{/if}}
  {{/if}}
  "repository": {
    {{#if workspaceLocation}}
      "directory": "{{workspaceLocation}}",
    {{/if}}
    "type": "git",
    "url": "{{gitRepo}}",
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    {{#if babel}}
      "build": "4c build src",
      "prepublishOnly": "yarn run build",
    {{/if}}

    {{#if typescript}}
      "typecheck": "tsc --noEmit",
    {{/if}}

    "tdd": "jest --watch",

    {{#if workspaceRoot}}
      "test": "jest",
    {{else}}
      "test": "yarn lint && jest{{#if typescript}} && yarn typecheck{{/if}}",
      "testonly": "jest",
    {{/if}}

    {{#unless workspaceRoot}}
      "lint": "4c lint src './*'",
      "format": "4c format src './*'",
      "release": "4c release"
    {{/unless}}
  },
  "publishConfig": {
    "access": "{{iff isPrivate 'restricted' 'public'}}"
  },
  {{#unless workspaceRoot}}
    "prettier": "@4c/prettier-config",
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*": [
        "yarn 4c lint --fix",
        "git add"
      ]
    },
  {{/unless}}
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "{{iff (eq type 'node') 'node' 'jsdom'}}"
  },
  {{#unless workspaceRoot}}
    "release": {
    {{#if semanticRelease}}
      {{#if babel}}
        "pkgRoot": "lib",
      {{/if}}
      "extends": [
        "@4c/semantic-release-config"
      ]
    {{else}}
      {{#if babel}}
        "publishDir": "lib"
      {{/if}}
    {{/if}}
    },
  {{/unless}}

  "devDependencies": {
    "@4c/cli": "^2.0.0",
    "@4c/jest-preset": "^1.4.5",
    "@4c/prettier-config": "^1.1.0",
    {{#if babel}}
      "@babel/cli": "^7.2.3",
      "@babel/core": "^7.2.2",
      "@4c/babel-preset": "^7.1.0",
    {{/if}}
    {{#if typescript}}
      {{#if (eq type 'node')}}
        "@types/node": "*",
      {{/if}}
    {{/if}}
    {{#unless workspaceRoot}}
      "eslint": "^6.8.0",
      "eslint-config-prettier": "^6.10.0",
      "eslint-plugin-import": "^2.20.1",
      "eslint-plugin-prettier": "^3.1.2",
      "eslint-plugin-jest": "^23.7.0",
      "eslint-config-4catalyzer-jest": "^2.0.4",
      {{#if (eq type 'web') }}
        "eslint-config-4catalyzer-react": "^1.0.3",
        "eslint-plugin-react": "^7.18.3",
        "eslint-plugin-react-hooks": "^2.3.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
      {{else}}
        "eslint-config-4catalyzer": "^1.1.0",
      {{/if}}
      {{#if typescript}}
        "typescript": "^3.7.5",
        "@4c/tsconfig": "^0.3.1",
        "@babel/preset-typescript": "^7.8.3",
        "eslint-config-4catalyzer-typescript": "^1.1.6",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
      {{/if}}
      {{#if semanticRelease}}
        "@4c/semantic-release-config": "^2.0.3",
        "semantic-release": "^15.5.0",
        "travis-deploy-once": "^5.0.0",
      {{/if}}
      "husky": "^3.0.9",
      "lint-staged": "^9.4.2",
      "prettier": "^1.19.1",
    {{/unless}}
    "jest": "^25.1.0"
  }
}
