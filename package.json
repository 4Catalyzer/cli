{
  "name": "4c-cli-root",
  "version": "0.3.1",
  "repository": "https://github.com/4Catalyzer/init.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint . && prettier --list-different --ignore-path .eslintignore '**/*.{json,css,md}'",
    "precommit": "lint-staged"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".js": {
      "parser": "4catalyzer",
      "style": "4catalyzer"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-4catalyzer": "^0.5.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  }
}
