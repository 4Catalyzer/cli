{
  "name": "4c-cli-root",
  "version": "0.3.1",
  "repository": "https://github.com/4Catalyzer/cli.git",
  "author": "4Catalyzer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "npm run lint",
    "lint": "yarn cli lint .",
    "cli": "node packages/cli",
    "format": "yarn cli format ."
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn cli lint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "yarn cli lint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@4c/import-sort": "^4.3.5",
    "@babel/core": "^7.5.5",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.1.0",
    "eslint-config-4catalyzer": "^1.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.4",
    "prettier": "^1.18.2"
  }
}
