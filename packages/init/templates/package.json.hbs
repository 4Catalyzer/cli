{
  "name": "{{name}}",
  "version": "1.0.0",
  "main": "{{iff babel 'lib/index.js' 'index.js'}}",
  {{#if (eq type 'web')}}
    {{#if babel}}
      "module": "lib/es/index.js",
    {{/if}}
  {{/if}}
  "repository": {
    "type": "git",
    "url": "{{gitRepo}}",
    {{#if workspaceLocation}}
      "directory": "{{workspaceLocation}}"
    {{/if}}
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    {{#if babel}}
      "build": "4c build src",
      "prepublishOnly": "yarn run build",
    {{/if}}

    "tdd": "jest --watch",

    {{#if workspaceRoot}}
      "test": "jest",
    {{else}}
      "test": "yarn lint && jest",
      "testonly": "jest",
    {{/if}}

    {{#unless workspaceRoot}}
      "lint": "4c lint src './*'",
      "format": "4c format src './*'",
      "release": "4c release"
    {{/unless}}
  },
  "publishConfig": {
    "access": "{{iff isPrivate 'restricted' 'public'}}"
  },
  {{#unless workspaceRoot}}
    "prettier": "@4c/prettier-config",
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*": [
        "yarn 4c lint --fix",
        "git add"
      ]
    },
  {{/unless}}
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "{{iff (eq type 'node') 'node' 'jsdom'}}"
  },
  {{#unless workspaceRoot}}
    "release": {
    {{#if semanticRelease}}
      {{#if babel}}
        "pkgRoot": "lib",
      {{/if}}
      "extends": [
        "@4c/semantic-release-config"
      ]
    {{else}}
      {{#if babel}}
        "publishDir": "lib"
      {{/if}}
    {{/if}}
    },
  {{/unless}}

  "devDependencies": {
    "@4c/cli": "^0.7.12",
    "@4c/jest-preset": "^1.3.0",
    "@4c/prettier-config": "^1.1.0",
    "@4c/import-sort": "^4.3.3",
    {{#if babel}}
      "@babel/cli": "^7.2.3",
      "@babel/core": "^7.2.2",
      "@4c/babel-preset": "^5.1.0",
    {{/if}}
    {{#if typescript}}
      {{#if (eq type 'node')}}
        "@types/node": "*",
      {{/if}}
    {{/if}}
    {{#unless workspaceRoot}}
      "eslint": "^6.1.0",
      "eslint-config-prettier": "^6.1.0",
      "eslint-plugin-import": "^^2.18.2",
      "eslint-plugin-prettier": "^3.1.0",
      "eslint-plugin-jest": "^22.15.2",
      "eslint-config-4catalyzer-jest": "^2.0.1",
      {{#if (eq type 'web') }}
        "eslint-config-4catalyzer-react": "^1.0.0",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-jsx-a11y": "^6.2.3",
      {{else}}
        "eslint-config-4catalyzer": "^1.0.0",
      {{/if}}
      {{#if typescript}}
        "typescript": "^3.4.5",
        "@4c/tsconfig": "^0.1.2",
        "@babel/preset-typescript": "^7.3.3",
        "eslint-config-4catalyzer-typescript": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
      {{/if}}
      {{#if semanticRelease}}
        "@4c/semantic-release-config": "^2.0.1",
        "semantic-release": "^15.13.24",
        "travis-deploy-once": "^5.0.11",
      {{/if}}
      "husky": "^3.0.2",
      "lint-staged": "^9.2.4",
      "prettier": "^1.18.2",
    {{/unless}}
    "jest": "^24.7.1"
  }
}
