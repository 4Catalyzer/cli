{
  "name": "{{name}}",
  "version": "1.0.0",
  "main": "{{iff babel 'lib/index.js' 'index.js'}}",
  {{#if babel}}
    "module": "es/index.js",
  {{/if}}
  "repository": {
    "type": "git",
    "url": "{{gitUrl name}}"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    {{#if babel}}
      "babel": "babel src --ignore **/__tests__ --delete-dir-on-start{{#if typescript}} -x .js,.ts,.tsx{{/if}}",
      {{#if typescript}}
      "build:types": "tsc --emitDeclarationOnly --outDir lib{{#if esm}} && tsc --outDir es{{/if}}",
      {{/if}}
      "build": "yarn babel -d lib{{#if esm}} && yarn babel -d es --env-name esm{{/if}}{{#if typescript}} && yarn build:types{{/if}}",
      "prepublishOnly": "yarn run build",
    {{/if}}

    "tdd": "jest --watch",

    {{#if workspaceRoot}}
      "test": "jest",
    {{else}}
      "test": "yarn lint && jest",
      "testonly": "jest",
    {{/if}}

    {{#unless workspaceRoot}}
      "import-sort": "import-sort '**/src/**/*.{{iff typescript '{js,ts,tsx}' 'js'}}' '!**/__generated__/*'{{#if typescript}} '!**/*.d.ts'{{/if}}",
      "eslint": "eslint . {{#if typescript}}--ext .js,.ts,.tsx{{/if}}",
      "prettier": "prettier --ignore-path .eslintignore '**/*.{json,css,md}'",
      "lint": "yarn import-sort --list-different && yarn eslint && yarn prettier --list-different{{#if typescript}}&& tsc --noEmit {{/if}}",
      "format": "yarn import-sort --write && yarn eslint && yarn prettier --write",
      "release": "rollout"
    {{/unless}}
  },
  "publishConfig": {
    "access": "{{iff isPrivate 'restricted' 'public'}}"
  },
  {{#unless workspaceRoot}}
    "prettier": {
      "printWidth": 79,
      "singleQuote": true,
      "trailingComma": "all"
    },
    "importSort": {
      {{#unless typescript}}
      ".js": {
        "parser": "@4c/import-sort/parser",
        "style": "@4c/import-sort/style"
      },
      {{else}}
      ".js, .ts, .tsx": {
        "parser": "@4c/import-sort/parser-ts",
        "style": "@4c/import-sort/style"
      }
      {{/unless}}
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "{{iff typescript '*.{js,ts,tsx}' '*.js'}}": [
        "eslint --fix",
        "import-sort --write",
        "git add"
      ],
      "*.{json,css,md}": [
        "prettier --write --ignore-path .eslintignore",
        "git add"
      ]
    },
  {{/unless}}
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "{{iff (eq type 'node') 'node' 'jsdom'}}"
  },
  {{#unless workspaceRoot}}
    "release": {
    {{#if semanticRelease}}
      {{#if babel}}
        "pkgRoot": "lib",
      {{/if}}
      "extends": [
        "@4c/semantic-release-config"
      ]
    {{else}}
      {{#if babel}}
        "publishDir": "lib"
      {{/if}}
    {{/if}}
    },
  {{/unless}}

  "devDependencies": {
    "@4c/jest-preset": "^1.3.0",
    {{#if babel}}
      "@babel/cli": "^7.2.3",
      "@babel/core": "^7.2.2",
      "@4c/babel-preset": "^5.1.0",
      "babel-core": "^7.0.0-bridge.0",
    {{/if}}
    {{#if typescript}}
      {{#if (eq type 'node')}}
        "@types/node": "*",
      {{/if}}
    {{/if}}
    {{#unless workspaceRoot}}
      "eslint": "^5.12.0",
      "eslint-config-prettier": "^4.0.0",
      "eslint-plugin-import": "^2.8.0",
      "eslint-plugin-prettier": "^3.0.1",
      "eslint-plugin-jest": "^22.1.2",
      "eslint-config-4catalyzer-jest": "^1.1.0",
      {{#if (eq type 'web') }}
        "eslint-config-4catalyzer-react": "^0.7.0",
        "eslint-plugin-react": "^7.12.3",
        "eslint-plugin-jsx-a11y": "^6.0.3",
      {{else}}
        "eslint-config-4catalyzer": "^0.7.0",
      {{/if}}
      {{#if typescript}}
        "typescript": "^3.2.2",
        "@4c/tsconfig": "^0.1.1",
        "@babel/preset-typescript": "^7.1.0",
        "eslint-config-4catalyzer-typescript": "^0.10.1",
        "@typescript-eslint/eslint-plugin": "^1.1.1",
      {{/if}}
      "import-sort-cli": "^5.2.0",
      "@4c/import-sort": "^4.3.0",
      {{#if semanticRelease}}
        "@4c/semantic-release-config": "^1.0.2",
        "semantic-release": "^15.5.0",
        "travis-deploy-once": "^5.0.0",
      {{else}}
        "@4c/rollout": "^1.2.0",
      {{/if}}
      "husky": "^1.1.2",
      "lint-staged": "^8.1.0",
      "prettier": "^1.15.3",
    {{/unless}}
    "jest": "^24.0.0"
  }
}
